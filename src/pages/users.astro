---
import DefaultLayout from '../layouts/DefaultLayout.astro';
import EmpyState from '../components/EmpyState.astro';
import Modal from '../components/Modal.astro';
import StatusChip from '../components/StatusChip.vue';
import { Status } from '../enum';
import CounterVue from '../components/CounterVue.vue';
import CounterReact from '../components/CounterReact.jsx';
import DFlex from '../components/DFlex.astro';
---

<DefaultLayout title="Users">
	<section>
		<h1>Users</h1><br />
		<p class="size-20">Lorem ipsum dolor sit amet.</p>
	</section>
	<section class="margin-32">
		<div class="space-content">
			<h2>Users overview</h2>
			<DFlex>
				<CounterVue client:load />
			</DFlex>
			<DFlex>
				<CounterReact client:load />
			</DFlex>
			<StatusChip client:visible>デフォルト</StatusChip>
			<StatusChip statusCode={Status.applicated} client:visible>
				デフォルト
			</StatusChip>
			<StatusChip statusCode={Status.approved} client:visible>
				デフォルト
			</StatusChip>
			<StatusChip statusCode={Status.repudiated} client:visible>
				デフォルト
			</StatusChip>
			<StatusChip statusCode={Status.systemError} client:visible>
				デフォルト
			</StatusChip>

			<EmpyState>
				You haven't added any users yet. Start by adding some.
			</EmpyState>
			<button id="modal-trigger" class="button color-secondary"
				>Add your first user</button
			>
			<Modal triggerId="modal-trigger" title="Add user" closeText="Cancel">
				<p>
					You can use this component to include a form that adds a new user to
					the list.
				</p>
			</Modal>
		</div>
	</section>
</DefaultLayout>
